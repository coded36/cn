#include <stdio.h>
#include <stdlib.h>
#include <netdb.h>
#include <arpa/inet.h>

int main() {
    char hostname[100];
    struct hostent *host_entry;
    char *IPbuffer;

    printf("Enter URL or domain name: ");
    scanf("%s", hostname);

    // Get host information
    host_entry = gethostbyname(hostname);
    if (host_entry == NULL) {
        perror("Error resolving hostname");
        return 1;
    }

    // Convert first IP address to string
    IPbuffer = inet_ntoa(*((struct in_addr*) host_entry->h_addr_list[0]));

    printf("Official Name: %s\n", host_entry->h_name);
    printf("IP Address  : %s\n", IPbuffer);

    return 0;
}
