#include <iostream>
using namespace std;
int main() {
 int n, src;
 int cost[10][10], dist[10], visited[10] = {0}, parent[10];
 cout << "Enter number of vertices: ";
 cin >> n;
 cout << "Enter cost matrix (use 999 for no edge):\n";
 for (int i = 0; i < n; i++)
 for (int j = 0; j < n; j++)
 cin >> cost[i][j];
 cout << "Enter source vertex: ";
 cin >> src;
 for (int i = 0; i < n; i++) {
 dist[i] = cost[src][i];
 parent[i] = src;
 }
 visited[src] = 1;
 for (int count = 1; count < n - 1; count++) {
 int u = -1, min = 999;
 for (int i = 0; i < n; i++)
 if (!visited[i] && dist[i] < min)
 min = dist[i], u = i;
 visited[u] = 1;
 for (int v = 0; v < n; v++)
 if (!visited[v] && dist[u] + cost[u][v] < dist[v])
 dist[v] = dist[u] + cost[u][v], parent[v] = u;
 }
 for (int i = 0; i < n; i++) {
 if (i == src) continue;
 cout << "\nPath " << src << "→" << i << ": " << i;
 for (int j = i; parent[j] != src; j = parent[j])
 cout << "←" << parent[j];
 cout << "←" << src << " (Dist=" << dist[i] << ")";
 }
 cout << endl;
 return 0;
}


